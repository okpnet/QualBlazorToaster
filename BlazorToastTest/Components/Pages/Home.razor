@using BlazorToaster
@using BlazorToaster.Model
@page "/"

<h1>Hello, world!</h1>
<div >
    <button class="button" @onclick="OnClick">add toast</button>
</div>
Welcome to your new app.
<ToastGroup Collection="modelCollsection">
    <ToastTemplate Context="model">
        <div class="alert alert-warning" role="alert">
            ID: @model.Content.Id.ToString()
        </div>
    </ToastTemplate>
</ToastGroup>
@code{
    IToastModelCollsection<Model.ToastMessage> modelCollsection;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        modelCollsection = ToastExtension.Factory.CreateCollecion<Model.ToastMessage>();
    }

    void OnClick()
    {
        modelCollsection.Enqueue(new());  
    }
}